#:kivy 2.3.0

<HomeScreen>:
    id:HomeScreen
    canvas.before:
        Color:
            rgba: 220/255, 255/255, 242/255, 1
        Rectangle:
            pos:self.pos
            size:self.size
    FloatLayout:
        Label:
            id : UID
            text: root.uid
            size_hint: .45, .15
            pos_hint: {'center_x':.5, 'center_y':.85}
            font_size: 80
            color: 1., 1., 1., 1. #font color
            background_color: 86/255, 203/255, 206/255, 1
            canvas.before:
                Color:
                    rgba: self.background_color
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [20,]
        Label:
            text : 'DEVICES'
            size_hint: .45, .15
            pos_hint: {'center_x':.5, 'center_y':.7}
            font_size: 80
            color: 1., 1., 1., 1. #font color
            background_color: 239/255, 241/255, 237/255, 1
            canvas.before:
                Color:
                    rgba: self.background_color
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [20,]
        